colvarsTrajFrequency 5

colvar {
  name drmsd_alpha_pi
  width 0.025

  outputTotalForce   yes
  outputAppliedForce yes

  rmsd {
    componentCoeff      -1
    atoms {
        atomNumbers { 10 20 30 40 50 60 70 80 90 92 }
    }
    refpositionsfile ../Common/da.min.xyz
  }

  rmsd {
    componentCoeff        1
    atoms {
        atomNumbers { 10 20 30 40 50 60 70 80 90 92 }
    }
    refpositionsfile ../Common/pi-ideal.xyz 
  }
  lowerBoundary    -5.0
  upperBoundary     5.0
}

