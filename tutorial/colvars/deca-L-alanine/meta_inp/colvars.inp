colvar {
   name endToEnd

   width 0.1

   outputTotalForce   yes
   outputAppliedForce yes

   distance {
      group1 {
atomNumbers { 92 }
      }
      group2 {
atomNumbers { 10 }
      }
   }
  lowerBoundary     5.0
  upperBoundary     40.0
  lowerWall 11
  lowerWallConstant 10
  upperWall 32.0
  upperWallConstant 10
}

metadynamics {
    name meta1
    colvars              endToEnd 
    hillWeight           0.005
    hillWidth            10.0
    newHillFrequency     1000
    useGrids             on
    keepHills off
    writeHillsTrajectory on
    keepFreeEnergyFiles on
    useHillsReflection   on
    reflectionLowLimit   11
    reflectionUpLimit    32
}

